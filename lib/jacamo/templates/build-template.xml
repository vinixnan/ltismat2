<project name   ="<PROJECT-ID>"
         basedir=".."
         default="run">

    <property name="jacamo.project.file" value="<PROJECT-FILE>"/>
    <property name="debug" value="<DEBUG>"/> <!-- use "-debug" to run in debug mode -->
    <property name="build.dir" value="${basedir}/bin/classes" />

    <property name="jasonJar" value="<JASON-JAR>"/>

    <path id="project.classpath">
        <pathelement location="${basedir}"/>
        <pathelement location="${build.dir}"/>
        <pathelement location="${jasonJar}"/>
<PATH-LIB>
    </path>

    <!-- tasks the user can override in his/her c-build.xml script -->
    <target name="user-init">
    </target>
    <target name="user-end">
    </target>

    <target name="init">
        <mkdir dir="${build.dir}" />
        <mkdir dir="${basedir}/src/env" />
        <mkdir dir="${basedir}/src/agt" />
        <antcall target="user-init" />
    </target>

    <target name="compile" depends="init">
        <javac srcdir="${basedir}/src/env" destdir="${build.dir}" debug="true" optimize="true" includeantruntime="false" >
            <classpath refid="project.classpath"/>
        </javac>
        <javac srcdir="${basedir}/src/agt" destdir="${build.dir}" debug="true" optimize="true" includeantruntime="false" >
            <classpath refid="project.classpath"/>
        </javac>
    </target>
    
    <target name="run" depends="compile" >
        <echo message="Running project ${ant.project.name}" />
        <java classname="<PROJECT-RUNNER-CLASS>" failonerror="true" fork="yes" dir="${basedir}" >
            <classpath refid="project.classpath"/>
            <arg line="${jacamo.project.file} ${debug} <RUN-ARGS>"/>
            <!-- jvmarg line="-Xmx500M -Xss8M"/ -->    
        </java>
        <antcall target="user-end" />
    </target>

    <target name="clean" >
        <delete failonerror="no" includeEmptyDirs="true" verbose="true">
            <fileset dir="${basedir}" includes="**/*.class"/>
        </delete>
    </target>

<OTHER-TASK>

</project>
